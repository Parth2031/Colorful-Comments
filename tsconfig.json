{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"strictNullChecks": true,
		"rootDir": "src",
		"noUnusedLocals": true
	},
	"exclude": [
		"src/test",
		"node_modules",
		".vscode-test"
	]
}