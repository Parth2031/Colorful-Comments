		"onLanguage:diagram",
		"onLanguage:dockerfile",
		"onLanguage:elixir",
		"onLanguage:elm",
		"onLanguage:erlang",
		"onLanguage:flax",
		"onLanguage:fsharp",
		"onLanguage:fortran-modern",
		"onLanguage:gdscript",
		"onLanguage:genstat",
		"onLanguage:go",
		"onLanguage:graphql",
		"onLanguage:groovy",
		"onLanguage:haskell",
		"onLanguage:html",
		"onLanguage:haxe",
		"onLanguage:hive-sql",
		"onLanguage:kotlin",
		"onLanguage:java",
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:jsonc",
		"onLanguage:julia",
		"onLanguage:latex",
		"onLanguage:less",
		"onLanguage:lisp",
		"onLanguage:lua",
		"onLanguage:makefile",
		"onLanguage:markdown",
		"onLanguage:matlab",
		"onLanguage:nim",
		"onLanguage:objective-c",
		"onLanguage:objective-cpp",
		"onLanguage:objectpascal",
		"onLanguage:pascal",
		"onLanguage:perl",
		"onLanguage:perl6",
		"onLanguage:pig",
		"onLanguage:plaintext",
		"onLanguage:plsql",
		"onLanguage:php",
		"onLanguage:powershell",
		"onLanguage:puppet",
		"onLanguage:python",
		"onLanguage:r",
		"onLanguage:racket",
		"onLanguage:ruby",
		"onLanguage:rust",
		"onLanguage:scala",
		"onLanguage:sas",
		"onLanguage:sass",
