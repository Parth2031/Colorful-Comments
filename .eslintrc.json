{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": [
      true,
      "ignore-same-line"
    ],
    "class-name": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": true
  },
  "defaultSeverity": "warning"
}
